<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".GenWellnessTipsActivity">

    <TextView
        android:id="@+id/back_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/persansb"
        android:text="back"
        android:textColor="@color/main"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/reading_strategies_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/brandish"
        android:text="General Wellness Tips for Studying"
        android:textColor="@color/main"
        android:textSize="20dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/learning_type_card"
        android:layout_width="390dp"
        android:layout_height="450dp"
        android:layout_below="@id/card_view_3"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/light_green"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:fontFamily="@font/persansb"
            android:textSize="20sp"
            android:text=" 1. Make sure to get 8 hours of sleep! \n\n 2. Play some relaxing music while studying \n\n 3. Eliminate distractions from your environment like your phone \n\n 4. Tired? Gain some energy by eating healthy snacks and staying hydrated! \n\n 5. Exercise to fight fatigue, increase energy levels, and improve brain function \n\n 6. Take regular breaks while studying"
            android:textColor="@color/main" />

    </androidx.cardview.widget.CardView>

</LinearLayout>