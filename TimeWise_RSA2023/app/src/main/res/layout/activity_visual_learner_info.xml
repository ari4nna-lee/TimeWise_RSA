<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".VisualLearnerInfo">

    <ScrollView
        android:id="@+id/scrollable_visual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/visual_title"
                android:layout_width="190dp"
                android:layout_height="45dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="35dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/title_visual" />

            <TextView
                android:id="@+id/visual_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/main"
                android:text="return to home"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/visual_info_box"
                android:layout_width="wrap_content"
                android:layout_height="485dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/text_box_visual" />

            <ImageView
                android:id="@+id/visual_tips_box"
                android:layout_width="380dp"
                android:layout_gravity="center"
                android:layout_height="495dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/tips_text_box"/>

        </LinearLayout>

    </ScrollView>
    
    <ImageView
        android:background="@drawable/decoration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>