<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".BreathingExercisesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/main"
        android:fontFamily="@font/persansb"
        android:layout_below="@+id/back_textview"
        android:textSize="30dp"
        android:layout_marginTop="16dp"
        android:text="press play to relax"/>

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/unwind_frame"/>

    <TextView
        android:id="@+id/back_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:fontFamily="@font/persansb"
        android:textColor="@color/main"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_marginHorizontal="20dp"/>


</RelativeLayout>