<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".StudyResourcesActivity">

    <TextView
        android:id="@+id/back_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:fontFamily="@font/persansb"
        android:textColor="@color/main"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/study_strategies_tv"
        android:text="Study Resources"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/brandish"
        android:textColor="@color/main"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/back_textview"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_1"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_below="@+id/study_strategies_tv"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/dark_peach"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/persansb"
            android:text="reading strategies"
            android:textColor="@color/main" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_2"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_below="@id/study_strategies_tv"
        android:layout_marginVertical="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/dark_pink"
        android:layout_toRightOf="@+id/card_view_1"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/persansb"
            android:paddingHorizontal="16dp"
            android:gravity="center"
            android:text="learning and memorization techniques"
            android:textColor="@color/main" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_3"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_below="@+id/card_view_1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/yellow"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/persansb"
            android:text="note-taking methods"
            android:textColor="@color/main" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_4"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_below="@id/card_view_2"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/light_green"
        android:layout_toRightOf="@+id/card_view_1"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/persansb"
            android:gravity="center"
            android:text="general wellness"
            android:textColor="@color/main" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/pomodoro_info"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_below="@id/card_view_3"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/light_blue"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/persansb"
            android:gravity="center"
            android:text="more about the pomodoro timer"
            android:textColor="@color/main" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/learning_type_card"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_below="@id/card_view_4"
        android:layout_toRightOf="@+id/pomodoro_info"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/main_purple"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/persansb"
            android:gravity="center"
            android:text="your learning style quiz results"
            android:textColor="@color/main" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>